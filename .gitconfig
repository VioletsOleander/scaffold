[init]
	defaultBranch = main
[user]
	name = VioletsOleander
	email = 1377232072@qq.com
[alias]
	c = commit
	cm = commit
	com = commit
	a = add
	s = status
	st = status
	stat = status
	stats = status
	b = branch
	bd = branch -D
	bdr = branch -r -d
	sw = switch
    l = log --oneline
	line = log --oneline
	retry = !git commit -e -F .git/COMMIT_EDITMSG
    re = retry
[core]
    editor = nvim
    pager = delta
	autocrlf = input
	quotepath = false
	ignorecase = false
[interactive]
    diffFilter = delta --color-only
[credential]
	helper = cache
[merge]
    conflictStyle = zdiff3
[delta]
    navigate = true    # use n and N to move between diff sections
[push]
	autoSetupRemote = true
